<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Slider?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="sample.TipCalculatorController">
   <children>
       <Label text="Amount">Amount</Label>
       <TextField fx:id="amountTextField" prefHeight="27.0" prefWidth="166.0" GridPane.columnIndex="1" />
       <Label fx:id="tipPercentageLabel" text="0%" GridPane.rowIndex="1" />
       <Slider fx:id="tipPercentageSlider" GridPane.columnIndex="1" GridPane.rowIndex="1" />
       <Label text="Tip" GridPane.rowIndex="2" />
       <TextField fx:id="tipTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
       <Label text="Total" GridPane.rowIndex="3" />
       <TextField fx:id="totalTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
       <Button onAction="#calculateButtonPressed" text="Calculate" GridPane.columnIndex="1" GridPane.rowIndex="4" />
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
   </rowConstraints>
</GridPane>
